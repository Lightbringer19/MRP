// SHORT CODES FOR AUTOMATION

remove_filter( 'the_content', 'wpautop' );
remove_filter( 'the_excerpt', 'wpautop' );

function art_shortcode($atts, $content) {
return '<div class="artwork">'.$content.
    '</div>';
}

add_shortcode('art', 'art_shortcode');

function info_shortcode($atts, $content) {
return '<div class="info">'.$content.
    '</div>';
}

add_shortcode('info', 'info_shortcode');

function tracklist_shortcode($atts, $content) {
return '<div class="tracklist">'.$content.
    '</div>';
}

add_shortcode('tracklist', 'tracklist_shortcode');

function releasetitle_shortcode($atts, $content) {
return '<div class="release-title">'.$content.
    '</div>';
}

add_shortcode('releasetitle', 'releasetitle_shortcode');

function release_shortcode($atts, $content) {
return '<div class="release">'.$content.
    '</div>';
}

add_shortcode('release', 'release_shortcode');

function download_shortcode($atts, $content) {
return '<div class="download">'.$content.
    '</div>';
}

add_shortcode('download', 'download_shortcode');